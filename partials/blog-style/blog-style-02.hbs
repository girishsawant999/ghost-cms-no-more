<article data-aos="fade-up" class="blog-style2 card mb-4 {{post_class}}">
    {{#if feature_image}}
    <div class="feature-image">
        <div class="image-frame image-hover-style-1">
            <a href="{{url}}">
                <img class="lazyload w-100" srcset="{{img_url feature_image size=" s"}} 300w, {{img_url feature_image
                    size="m" }} 600w, {{img_url feature_image size="l" }} 1000w, {{img_url feature_image size="xl" }}
                    2000w" sizes="(max-width: 1000px) 400px, 800px" src="{{img_url feature_image size=" m"}}"
                    alt="{{title}}" loading="lazy" />
            </a>
        </div>
    </div>
    {{/if}}
    <div data-aos="fade-in" class="card-body  d-md-flex align-items-center">
        <div class="card-flex-content">
            {{#primary_tag}}
            <a href="{{url}}" class="badge bg-danger">{{name}}</a>
            {{/primary_tag}}
            <h4><a href="{{url}}">{{title}}</a>
            </h4>
            <p>{{excerpt}}</p>
            
            <div class="row">
                <div class="col-lg-6">
                    {{> "author-block"}}
                </div>

                <div class="col-lg-6"> <span class="date-info small  float-lg-end">
                        <span>{{date published_at format="DD MMM YY"}}</span>
                        <span>{{reading_time}}</span>
                    </span>
                </div>
            </div>
        </div>
        <div class="comments ms-4 mx-2">
            <a href="#" class="d-block"><i class="fa fa-2x fa-comments p-1"></i></a>
        </div>
    </div>
</article>


