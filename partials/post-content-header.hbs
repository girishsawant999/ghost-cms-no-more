<div class="mb-3">
    <div class="my-1">
        <h1>{{title}}</h1>
        <p class="lead">{{excerpt}}</p>
    </div>
    <div class="row mt-3">
        {{#foreach authors }}
        <div class="col-md-6 col-lg-4">
            <div class="author-name-full justify-content-start flex-row">
                {{#if profile_image}}
                <img class="avata rounded-circl" src="{{img_url profile_image}}" alt="{{title}}" />
                {{/if}}
                <div class="ps-1 d-flex align-items-start justify-content-between flex-column">
                    <a href="{{url}}"><strong>{{name}}</strong></a>
                    <p class="small"> {{location}}</p>
                </div>

            </div>
        </div>
        {{/foreach}}
    </div>

    <div class="mb-0">
        <p class="m-0 small">{{t 'Last updated on'}} {{date updated_at format="MMM D, YYYY"}}</p>
        <p class="m-0 small">{{t 'Posted on'}} {{date published_at format="MMM D, YYYY"}}</p>
    </div>

</div>