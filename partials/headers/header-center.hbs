<header class="header-area">
    <div class="header-navbar-middle d-none d-lg-block">
        <div class="container">
            <div class="navbar-brand-wrapper pt-5 pb-3 d-flex justify-content-center  align-items-center">
               <a class="navbar-brand" href="{{@site.url}}">
               {{#if @site.logo}}
                  <img src="{{@site.logo}}" alt="{{@site.title}}">
               {{else}}
                       {{@site.title}}
               {{/if}}
            </a> 
            </div>
        </div>
    </div>
    <div class="header-navbar-bottom py-2 pt-lg-0 pb-lg-0 border-top border-bottom border-light">
        <div class="container nf-menu-selector">
            <nav class="navbar navbar-expand-lg nf-header-center">
                    <div class="nf-nav-header-part">
               {{#if @site.logo}}
                  <a class="navbar-brand" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>
               {{else}}
                       <a class="navbar-brand" href="{{@site.url}}"> {{@site.title}}</a>
               {{/if}}
               <button id="nf-navbar-toggler" type="button">
                  <span class="navbar-toggler-icon"></span>
               </button>
               <div class="search-modal" data-bs-toggle="modal" data-bs-target="#search-modal"><a class="nav-link"
                  href="#"> <i class="fas fa-search"></i> </a>
            </div>
            </div>

            <div class="main_navbar  mx-auto" id="main_nav">
               {{navigation}}
            </div>
             
            </nav>

        </div>
    </div>
</header>