<header class="header-area">
   <div class="header-navbar-top py-1 bg-light  d-none d-lg-block">
      <div class="container-fluid">
         <div class="header-newsticker-menu">

            <div class="newsticker-social">
               <ul class="list-inline">
                  {{#if @site.facebook}}
                     <li class="list-inline-item"><a class="bg-primary" href="{{@site.facebook}}"><i class="fab fa-facebook-f"></i></a>
                     </li>
                  {{/if}}
                  {{#if @site.twitter}}
                     <li class="list-inline-item"><a class="bg-info" href="{{@site.twitter}}"><i class="fab fa-twitter"></i></a>
                     </li>
                  {{/if}}
                  {{#if @site.website}}
                     <li class="list-inline-item"><a class="bg-danger" href="{{@site.website}}"><i class="fas fa-globe"></i></a> </li>
                  {{/if}}
               </ul>
            </div>
         </div>
      </div>
   </div>
   <div class="header-navbar-middle d-none d-lg-block">
      <div class="container-fluid">
         <div class="navbar-brand-wrapper py-3 d-flex justify-content-between align-items-center">
            <a class="navbar-brand" href="{{@site.url}}">
               {{#if @site.logo}}
                  <img src="{{@site.logo}}" alt="{{@site.title}}">
               {{else}}
                  <img src="{{asset "images/logo.svg"}}" alt="{{@site.title}}">
               {{/if}}
            </a>
         </div>
      </div>
   </div>
   <div class="header-navbar-bottom pt-2 pt-lg-0 border-top border-bottom border-light">
      <div class="container-fluid nf-menu-selector">
         <nav class="navbar navbar-expand-lg">
            <div class="nf-nav-header-part">
               {{#if @site.logo}}
                  <a class="navbar-brand" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>
               {{else}}
                       <a class="navbar-brand" href="{{@site.url}}"> {{@site.title}}</a>
               {{/if}}
               <button id="nf-navbar-toggler" type="button">
                  <span class="navbar-toggler-icon"></span>
               </button>
            
            </div>
             <div class="main_navbar" id="main_nav">
               {{navigation}}
            </div>
               <div class="search-modal" data-bs-toggle="modal" data-bs-target="#headermodal"><a class="nav-link"
                  href="#"> <i class="fas fa-search"></i> </a>
            </div>           
          
         </nav>
       {{> "search-modal"}}
      </div>
   </div>
</header>