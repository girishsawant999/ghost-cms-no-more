{{!< default}}
{{> "header"}}

{{!-- nf tags section --}}
<section class="nf-tags-section pb-5">
    {{> "nf-page-title"}}

    {{#get "tags" include="count.posts"}}
        {{#if tags}}
            <div class="container pt-5">
                <div class="row">
                    {{#foreach tags}}
                        <div class="col-md-6 col-lg-4">
                            <div class="card blog-style1 mb-4 border border-light">
                                <div class="feature-image">
                                    <div class="image-frame image-hover-style-1">
                                        <a href="{{url}}">
                                            {{#if feature_image}}
                                                <img src="{{img_url feature_image}}" alt="image" class="w-100">
                                             {{/if}}
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h4><a href="{{url}}">{{name}}</a></h4>
                                    <span class="small badge bg-danger">{{t "Total"}} {{plural count.posts empty=(t "No Posts") singular=(t "% post") plural=(t "% posts")}}</span> <br>
                                    {{#if description}}
                                        <p class="mb-0">{{description}}</p>
                                    {{/if }}

                                    <a class="fw-bold" href="{{url}}">{{t "View all posts"}}</a>
                                </div>
                            </div>
                        </div>
                    {{/foreach}}
                </div>
            </div>
        {{/if}}
    {{/get}}
</section>
