{{!< default}} 

{{> "headers/header-center"}}

<section class="nf-home-04-section pt-3 pb-3  pt-lg-2 pb-lg-3">
   <div class="container">
      <div class="row pt-2">
         {{#get "posts"  limit="all" include="tags,authors,count.posts" filter="tag:-hash-faq"}}
            {{#foreach posts }}
               <div class="col-md-6 h4-post nf-post-item">
                  {{> "blog-style/blog-style-02-1" }}
               </div>
               <div class="col-lg-6 col-md-12 h4-post nf-post-item">
                  {{> "blog-style/blog-style-03" }}
               </div>
            {{/foreach}}
         {{/get}}
      </div>
      <div class="row">
         <div class="col-md-4 mx-auto mt-1">
            <button class="btn btn-light mb-2 w-100 loadmore-h4">
               {{t "Load More"}}
            </button>
         </div>
      </div>

   </div>
</section>


