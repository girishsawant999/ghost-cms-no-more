{{!< default}} 
{{> "headers/header-fullwidth"}}
 <!--/// Blog Area /// -->
{{!-- nf content section --}}
<section class="nf-page-content-section pt-3 pb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="order-2 order-md-1 col-xl-3 col-lg-3 col-md-3">
               {{> "left-sidebar"}}
            </div>
            {{#post}}
                <div class="order-1 order-md-2 col-xl-6 col-lg-6 col-md-6">
                    {{> "post-content-header"}}

                    {{#if feature_image }}
                        <div class="featured-image pb-3">
                            <div class="image-frame ">
                               
                                     <figure>
                        <img class="w-100 rounded" srcset="{{img_url feature_image size=" s"}} 300w, {{img_url feature_image
                              size="m" }} 600w, {{img_url feature_image size="l" }} 1000w, {{img_url feature_image
                              size="xl" }} 2000w" sizes="(max-width: 1000px) 400px, 700px"
                              src="{{img_url feature_image size=" m"}}" alt="{{#if feature_image_alt}}
                               {{feature_image_alt}}
                              {{else}}
                              {{title}}                             
                              {{/if}}
                              " />
                       </figure>
                              

                  
                     {{#if feature_image_caption}}
                        <figcaption class="small"> {{feature_image_caption}}</figcaption>                                                        
                     {{/if}}


                            </div>
                        </div>
                    {{/if}}

                    <div class="entry-content pb-3 sidebar-both">
                         
                            {{content}}
                    
                    </div>

                    {{> "post-content-footer"}}
                </div>
            {{/post}}
            <div class="order-3 order-md-3 col-xl-3 col-lg-3 col-md-3 pt-4 pt-md-0">
                {{> "sidebar"}}
            </div>
        </div>
    </div> 
</section>
{{> "cta-section"}}
{{> "footer-fullwidth"}}